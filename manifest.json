{
  "name": "Lukas Tencer's modification of instant messaging client imo.im (beta)",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Introduces additional features to instant messaging client imo.im. This is UNOFFICIAL modification.",
  "background": { "scripts": ["background.js"] },  
  "page_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title" : "Your imo.im is modified!"
  },
  "content_scripts" : [
    {
      "matches" : [
        "*://imo.im/*"
      ],
      "js" : ["jquery-1.7.2.min.js","contentscript.js","js/jquery.lightbox-0.5.min.js"],
	  "css" : ["style.css","css/jquery.lightbox-0.5.css"],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ], 
  "permissions" : [
    "tabs",
	"http://api.flickr.com/",
    "*://imo.im/*",
    "webRequest",
	"webRequestBlocking",
	"notifications",
	"http://*/",
	"https://*/"
  ],  
  "icons" : {
    "32" : "icon32.png",
	"48" : "icon48.png",
    "128" : "icon128.png"
  },
  "options_page": "options.html",  
  "web_accessible_resources": [
    "camera.png",
	"watch.png",
	"watch_over.png",
	"bell.png",
	"bell_over.png",
	"bell_active.png",
	"icon.png",
	"arrowright.png",
	"arrowleft.png",
	"zoom.png",
	"scope.png",
	"images/lightbox-blank.gif",
	"images/lightbox-btn-close.gif",
	"images/lightbox-btn-next.gif",
	"images/lightbox-btn-prev.gif",
	"images/lightbox-ico-loading.gif",
	"images/facebook.png",
	"images/googleplus.png",
	"images/linkedin.png",
	"images/twitter.png",
	"images/add.png"
  ],  
  "manifest_version": 2
}